.container

  = render partial: 'shared/notice'

  .row
    .col-md-12
      = render partial: 'hero_area'

  = render partial: 'my_navigation'

  .row
    .col-md-8
      = simple_form_for(current_user.profile, as: :profile, url: update_profile_path, html: { method: :put }) do |f|
        = f.input :hero, required: false, label: 'Hero', class: 'file', input_html: { id: 'upload-hero', :'data-preview-file-type' => 'text' }
        = f.input :avatar, required: false, label: 'Avatar', class: 'file', input_html: { id: 'upload-avatar', :'data-preview-file-type' => 'text' }
        = f.input :profile, required: false, autofocus: true, input_html: {rows: 3}
        = f.button :submit, "Update", class: 'btn btn-default pull-right'
    .col-md-4
      = render partial: 'edit_navigation'

javascript:
  $('#upload-avatar').fileinput({
    showUpload: false,
    showPreview: true,
    allowedFileExtensions: ['jpg', 'jpeg', 'png'],
    previewFileType: 'image'
  });

  $('#upload-hero').fileinput({
    showUpload: false,
    showPreview: true,
    allowedFileExtensions: ['jpg', 'jpeg', 'png'],
    previewFileType: 'image'
  });
